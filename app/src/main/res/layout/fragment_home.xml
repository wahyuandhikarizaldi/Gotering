<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

   <TextView
       android:id="@+id/namagotering"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:text="GOTERING.com"
       android:textStyle="bold"
       android:textSize="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="10dp"/>

   <ImageView
       android:id="@+id/promo"
       android:layout_below="@+id/namagotering"
       android:layout_width="380dp"
       android:layout_height="194dp"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="16dp"
       android:scaleType="centerCrop"
       android:src="@drawable/promo3"
       android:layout_marginBottom="20dp"/>

   <TextView
       android:id="@+id/LISTMENUMAKANAN"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_below="@+id/promo"
       android:layout_alignParentStart="true"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="20dp"
       android:layout_marginTop="2dp"
       android:layout_marginEnd="291dp"
       android:text="MENU"
       android:textSize="20sp"
       android:textStyle="bold" />

   <ScrollView
       android:id="@+id/my_scroll_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/LISTMENUMAKANAN"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="25dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="20dp">

      <LinearLayout
          android:id="@+id/linear_layout_documents"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/border">

         <!-- Dynamically added TextViews will go here -->

      </LinearLayout>
   </ScrollView>

</RelativeLayout>